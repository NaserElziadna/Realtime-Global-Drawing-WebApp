<aside id="global-chat" class="chat-sidebar">
    <div class="chat-header">
        <span>Global Chat</span>
        <span id="chatUserCount">0 👥</span>
    </div>
    <div id="chat-messages" class="chat-messages"></div>
    <div class="chat-input-container">
        <form id="chat-form" onsubmit="return false;">
            <input id="chat-input" type="text" class="form-control" placeholder="Type a message..." autocomplete="off">
            <!-- The position button will be inserted here by JavaScript -->
            <button class="btn btn-primary" type="button" id="send-message">Send</button>
        </form>
    </div>
</aside>

<button id="chat-toggle" class="chat-toggle">
    <span id="chat-toggle-icon">❮</span>
</button>