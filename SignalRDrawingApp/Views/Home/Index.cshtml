                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-users me-2"></i>
                            Join thousands of artists collaborating in real-time
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
